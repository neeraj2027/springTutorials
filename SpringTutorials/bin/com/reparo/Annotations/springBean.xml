<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config />
	<context:component-scan base-package="com.reparo.Annotations" />

	<bean id="triangle" class="com.reparo.Annotations.Triangle">
		<property name="point1" ref="point1" />
		<property name="point2" ref="point2" />
		<property name="point3" ref="point3" />
	</bean>


	<bean id="circle" class="com.reparo.Annotations.Circle">
		<!-- <property name="center" ref="point1" /> -->
	</bean>

	<bean id="point1" class="com.reparo.Annotations.Point">
		<!-- <qualifier value="circleRelated" /> -->
		<property name="x" value="${pointA.x}" />
		<property name="y" value="${pointA.y}" />
	</bean>

	<bean id="point2" class="com.reparo.Annotations.Point">
		<property name="x" value="${pointB.x}" />
		<property name="y" value="${pointB.y}" />
	</bean>

	<bean id="point3" class="com.reparo.Annotations.Point">
		<property name="x" value="${pointC.x}" />
		<property name="y" value="${pointC.y}" />
	</bean>
	<!-- <bean class="com.reparo.BeanFactoryPostProcessor.BeanFactoryPostProcessorTest" 
		/> -->
	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location"
			value="com\\reparo\\Annotations\\pointConfig.properties"></property>
	</bean>

	<!-- <bean class="org.springframework.beans.factory.annotation.RequiredAnnotationBeanPostProcessor" 
		/> -->
	<bean
		class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor" />

</beans>
